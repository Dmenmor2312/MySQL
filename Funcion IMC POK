DELIMITER //
CREATE FUNCTION calcular_IMC(p_peso DECIMAL(5,2), p_altura DECIMAL(5,2))
RETURNS DECIMAL(6,2)
BEGIN
    DECLARE imc DECIMAL(6,2);
    IF p_altura > 0 THEN
        SET imc = p_peso / (p_altura * p_altura);
    ELSE
        SET imc = NULL;
    END IF;
    RETURN imc;
END//
DELIMITER ;

SELECT NombrePOK, Altura, Peso, calcular_IMC(Peso, Altura) AS IMC
FROM Pokemon;
